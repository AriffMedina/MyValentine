    <script>
        let intentos = 0;

        function moverBoton() {
            const btn = document.getElementById('btnNo');
            const container = btn.parentElement;
            

            intentos++;
            document.querySelector('.btn-si').style.transform = `scale(${1 + intentos * 0.2})`;
            

            const x = Math.random() * 200 - 100;
            const y = Math.random() * 100 - 50;
            
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        
        }

        function dijoSi() {
            document.getElementById('success').classList.add('show');
            success.style.backgroundImage = "url('https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExdmx1MTBqd3d4cjhhMncxN2ZhbTRjcnpyY3MwdnJyNTZreDVkaGhjcSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/GFx1b1HqmiS3LTUTnI/giphy.gif')";
            success.style.backgroundSize = "cover";
            success.style.backgroundPosition = "center";
            success.style.backgroundSize = "auto";
            success.style.backgroundRepeat = "repeat";
            
            //Qué haces viendo mi código miamor?
        }
    </script>
